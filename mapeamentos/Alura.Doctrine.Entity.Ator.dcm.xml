<doctrine-mapping>
    <entity name="Alura\Doctrine\Entity\Ator" table="ator">
        <id name="id" column="id_ator" type="integer">
            <generator strategy="IDENTITY" />
        </id>
        <field name="primeiroNome" column="primeiro_nome" type="string" length="45" />
        <field name="ultimoNome" column="ultimo_nome" type="string" length="45" />
        <field name="ultimaAtualizacao" column="data_atualizado" type="datetime">
            <option>
                <option name="default">NOW()</option>
            </option>
        </field>
    </entity>
</doctrine-mapping>
